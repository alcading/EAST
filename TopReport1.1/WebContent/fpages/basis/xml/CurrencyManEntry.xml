<?xml version="1.0" encoding="UTF-8"?>
<!--  用于直接生成SQL语句，支持同步和异步提交 -->
<!--  title:标题
	navigate:导航信息
	type:方式（sql|call)
	interface:是否显示输入条件页面(true|false)
	databusid:数据总线编号
	transdataactionurl:数据整理URL
	txnlogflag:true记录日志
	async:异步提交标志
	pagesize:页面显示记录数(缺省为10)
-->

<CommQry title="CurrencyManEntry.title" navigate="基础信息管理  &gt; 币种信息维护"
    type="call" interface = "false" pagesize="10" async="true" databusid=""
    transdataactionurl="/trans/TransDataAction.do" txnlogflag="true"
    getterclassname="com.huateng.report.basis.getter.CurrencyManEntryGetter" >
<Include id="BankParam" />

<PageQryExp type="XLS" limit="true" encoding="" url="/trans/qryExp.do" desc="币种信息"/>
<Fields>
		<!-- status :F-基本信息中显示  N-不显示 D-详细信息中显示 A-基本、详细信息中都显示  -->
		<!-- primary : true-作为表单项记录上传　false-不作为表单项上传 -->

		<Field id="id" desc="币种货币代码" edittype="text" require="true" size="6" errmsg="币种代码不能为空！"  datatype="string" status="F" xpath="/id"  />

		<!-- <Field id="id" desc="CurrencyManEntry.field.id" size="6" datatype="string" xpath="/id"></Field>-->
		<Field id="currencyName" desc="币种名称" edittype="text" size="52" require="true" errmsg="币种名称不能为空！" datatype="string" status="F" xpath="/currencyName" />
		<Field id="dotNum" desc="小数点位数" rules="isNum" require="true" errmsg="小数点尾数不能为空且要大于0" size="2" default="2"  edittype="text" datatype="int" status="F" xpath="/dotNum" />
		<Field id="st" desc="记录状态" status="N" require="false" edittype="select"
			datatype="string" method="None" readonly="true" primary="true" type="st"
			translated="DATA_DIC.3001" size="30" default="" xpath="/st" tip="" />
		<Field id="lock" desc="是否锁定" edittype="text" datatype="string" status="N" size="1" xpath="/lock"/>
		<Field id="del" desc="是否已删除" edittype="text" datatype="string" status="N" size="1" xpath="/del"/>
		<Field id="crtDt" desc="创建日期" edittype="text" datatype="string" status="N" size="8" xpath="/crtDt"/>
		<Field id="lastUpdTms" desc="最后更新时间" edittype="text" datatype="string" status="F" size="14" xpath="/lastUpdTms"/>
		<Field id="lastUpdOper" desc="最后操作人" edittype="text" datatype="string" status="N" size="20" xpath="/lastUpdOper"/>
		<Field id="filler1" desc="备用字段1" edittype="text" datatype="date" xpath="" status="N"/>
		<Field id="filler2" desc="备用字段2" edittype="text" datatype="date" xpath="" status="N"/>
		<Field id="filler3" desc="备用字段3" edittype="text" datatype="timestamp" xpath="" status="N"/>

		<Field id="opr" desc="操作" edittype="text" datatype="string" xpath="/id" />

</Fields>

<Where >
	<TextBox id="qCurrencyCode" desc="币种货币代码" datatype="string" index="0" />
	<TextBox id="qCurrencyName" desc="币种名称" datatype="string" index="1"/>
	<Option id="st"  default="" desc="记录状态" type="st" tip="" method="None" index="2" translated="DATA_DIC.3001"/>
</Where>

<Operations>
	<Button id="btNew" name="btNew" desc ="CurrencyManEntry.button.btNew" operation="addrecord" url="#" show="" group="" txn="" icon="icon-add"/>/>
	<Button id="btMod" name="btMod" desc="CurrencyManEntry.button.btMod" operation="syncsubmit" url="#" show="" group="" txn="" />

	<Button id="btDel" name="btDel" desc="CurrencyManEntry.button.btDel"
	         operation="asysubmit"
	         updateClass="com.huateng.report.basis.updater.CurrencyManDelUpdate"
	         url="/fpages/basis/ftl/CurrencyManEntry.ftl"  txn="" />

	<Button id="btSave" name="btSave" desc="CurrencyManEntry.button.btSave"
			operation="asysubmit"
			updateClass="com.huateng.report.basis.updater.CurrencyManUpdate"
			url="/fpages/basis/ftl/CurrencyManEntry.ftl" txn="" />

</Operations>
	<Script></Script>
 </CommQry>