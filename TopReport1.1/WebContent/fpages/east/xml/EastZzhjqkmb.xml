<?xml version="1.0" encoding="UTF-8"?>

<!--  用于直接生成SQL语句，支持同步和异步提交 -->
<!--  title:标题
	navigate:导航信息
	type:方式（sql|call)
	interface:是否显示输入条件页面(true|false)
	databusid:数据总线编号
	transdataactionurl:数据整理URL
	txnlogflag:true记录日志
	async:异步提交标志
	pagesize:页面显示记录数(缺省为10)
-->
<CommQry title="总账会计全科目表" navigate="银监标准化    &gt; 总账会计全科目表" type="call"
	interface="false" pagesize="10" async="true" databusid=""
	transdataactionurl="/trans/TransDataAction.do"
	txnlogflag="true"
	getterclassname="resources.east.data.getter.EastZzhjqkmbGetter">
	<Include id="BankParam" />
	<!--
	<PageQryExp type="CSV" limit="true" encoding="GBK" url="/trans/qryExp.do" directory="F:/upload"/>
	-->
	<PageQryExp type="XLS" limit="true" encoding="GBK" url="/trans/qryExp.do" desc="批量下载-总账会计全科目表" />
	<Fields>
		<!-- status :F-基本信息中显示  N-不显示 D-详细信息中显示 A-基本、详细信息中都显示  -->
		<!-- primary : true-作为表单项记录上传　false-不作为表单项上传 -->
		
		<Field id="id" desc="id" edittype="text" datatype="string" size="30" xpath="/id"></Field>
        <Field id="yhjgdm" desc="银行机构代码"  require="true" edittype="text" status="F" datatype="string" size="30" xpath="/yhjgdm"></Field>	
	    <Field id="nbjgh" desc="内部机构号"  require="true" edittype="text" status="F" datatype="string" size="30" xpath="/id/nbjgh"></Field>
	    <Field id="jrxkzh" desc="金融许可证号"  require="true" status="F" edittype="text" datatype="string" size="30" xpath="/jrxkzh"></Field>	
		<Field id="yhjgmc" desc="银行机构名称"  require="true" status="F"  edittype="text"  datatype="string" size="200" xpath="/yhjgmc"></Field>
		<Field id="kmbh" desc="科目编号"  require="true" status="F"  edittype="text"  datatype="string" size="60" xpath="/id/kmbh" />
		<Field id="kmmc" desc="科目名称"  require="true" status="F"  edittype="text"  datatype="string" size="200" xpath="/kmmc" />
		<Field id="kmjc" desc="科目级次"  require="true" status="F"  edittype="text"  datatype="string" size="2" xpath="/kmjc" />
		<Field id="kmlx" desc="科目类型"  require="true" status="F"  edittype="select" translated="DATA_DIC.20035" datatype="string" size="2" xpath="/kmlx" />
		<Field id="qcjfye" desc="期初借方余额" require="true"  status="F"  edittype="text"  datatype="currency" size="20" xpath="/qcjfye" />
		<Field id="qcdfye" desc="期初贷方余额"  require="true" status="F"  edittype="text"  datatype="currency" size="20" xpath="/qcdfye" />
		<Field id="jffse" desc="本期借方发生额" require="true"  status="F"  edittype="text"  datatype="currency" size="20" xpath="/jffse" />
		<Field id="dffse" desc="本期贷方发生额"  require="true" status="F"  edittype="text"  datatype="currency" size="20" xpath="/dffse" />
		<Field id="qmjfye" desc="期末借方余额"  require="true" status="F"  edittype="text"  datatype="currency" size="20" xpath="/qmjfye" />
		<Field id="qmdfye" desc="期末贷方余额"  require="true" status="F"  edittype="text"  datatype="currency" size="20" xpath="/qmdfye" />
		<Field id="bz" desc="币种信息"  require="true" status="F"  edittype="text"  datatype="string" size="3" xpath="/id/bz" />
		<Field id="kjrq" desc="会计日期"  require="true" status="F"  edittype="text"  datatype="string" size="8" xpath="/id/kjrq" />
		<Field id="bszq" desc="报送周期" require="true"  status="F"  edittype="select" translated="DATA_DIC.20036" datatype="string" size="2" xpath="/id/bszq" />
		<Field id="operation" desc="操作" status="N" method="None" xpath=""
			   primary="true" type="" size="20" default="" tip="操作" require=""/>	
       </Fields>
    <Where>
    	<TextBox id="kjrq" desc="会计日期" datatype="date" index="5" require="true" errmsg="会计日期不能为空！" tip="时间为必输项" size="12"/>
    	<TextBox id="yhjgdm" desc="银行机构代码" datatype="string" index="3" size="30"/>
    	<TextBox id="kmbh" desc="科目编号" datatype="string" index="3" size="60"/>
    	<TextBox id="kmlx" desc="科目类型" edittype="select" translated="DATA_DIC.20035" datatype="string" index="3" size="2"/>
    </Where>
	<Operations>
		<Button id="btModOrAdd" name="btModOrAdd" desc="保存" operation="asysubmit"
			updateClass="resources.east.data.update.EastZzhjqkmbModOrAddUpdate"
			url="" txn="" />
		<Button id="btDel" name="btDel" desc="删除" operation="asysubmit"
			updateClass="resources.east.data.update.EastZzhjqkmbModOrAddUpdate"
			url="" />
		<Button id="btCancel" name="btCancel" desc="取消" operation="href" url="" />
		<Button id="btAdd" name="btAdd" desc="新增" operation="" url="#" show="" group="" txn="" icon="icon-add"/>
	</Operations>
</CommQry>