<?xml version="1.0" encoding="UTF-8"?>

<!--  用于直接生成SQL语句，支持同步和异步提交 -->
<!--  title:标题
	navigate:导航信息
	type:方式（sql|call)
	interface:是否显示输入条件页面(true|false)
	databusid:数据总线编号
	transdataactionurl:数据整理URL
	txnlogflag:true记录日志
	async:异步提交标志
	pagesize:页面显示记录数(缺省为10)
-->
<CommQry title="授信信息" navigate="银监标准化    &gt; 授信信息" type="call"
	interface="false" pagesize="10" async="true" databusid=""
	transdataactionurl="/trans/TransDataAction.do"
	txnlogflag="true"
	getterclassname="resources.east.data.getter.EastSxxxGetter">
	<Include id="BankParam" />
	<!--
	<PageQryExp type="CSV" limit="true" encoding="GBK" url="/trans/qryExp.do" directory="F:/upload"/>
	-->
	<PageQryExp type="XLS" limit="true" encoding="GBK" url="/trans/qryExp.do" desc="批量下载-授信信息" />
	<Fields>
		<!-- status :F-基本信息中显示  N-不显示 D-详细信息中显示 A-基本、详细信息中都显示  -->
		<!-- primary : true-作为表单项记录上传　false-不作为表单项上传 -->
		
		
		<Field id="id" desc="id" edittype="text" datatype="string" size="30" xpath="/id"></Field>
		<Field id="sxxyh" desc="授信协议号" status="F"  edittype="text"  datatype="string" size="60" xpath="/id/sxxyh" />
		<Field id="khtybh" desc="客户统一编号" status="F"  edittype="text"  datatype="string" size="60" xpath="/khtybh" />
		<Field id="jrxkzh" desc="金融许可证号" edittype="text" status="F" datatype="string" size="30" xpath="/jrxkzh"></Field>
		<Field id="yxjgdm" desc="银行机构代码" status="F"  edittype="text"  datatype="string" size="30" xpath="/yxjgdm"></Field>
		<Field id="nbjgh" desc="内部机构号 " status="F"  edittype="text"  datatype="string" size="30" xpath="/nbjgh" />
		<Field id="fsrq" desc="发生日期" status="F"  edittype="text"  datatype="string" size="8" xpath="/fsrq" />
	    <Field id="khmc" desc="客户名称" status="F" edittype="text" datatype="string" size="200" xpath="/khmc"></Field>	
		<Field id="sxzl" desc="授信主体种类" status="F"  edittype="text"  datatype="string" size="30" xpath="/sxzl" />
		<Field id="sxxymc" desc="授信协议名称" status="F"  edittype="text"  datatype="string" size="400" xpath="/sxxymc" />
		<Field id="edje" desc="额度金额" status="F"  edittype="text"  datatype="string" size="24" xpath="/edje" />
		<Field id="bz" desc="币种" status="F"  edittype="text"  datatype="string" size="3" xpath="/bz" />
		<Field id="sxrq" desc="生效日期" status="F"  edittype="text"  datatype="string" size="8" xpath="/sxrq" />
		<Field id="sxzt" desc="授信状态" status="F"  edittype="text"  datatype="string" size="6" xpath="/sxzt" />
		<Field id="sxksrq" desc="授信开始日期" status="F"  edittype="text"  datatype="string" size="8" xpath="/sxksrq" />
		<Field id="sxdqrq" desc="授信到期日期" status="F"  edittype="text"  datatype="string" size="8" xpath="/sxdqrq" />
		<Field id="scsxrq" desc="首次授信日期" status="F"  edittype="text"  datatype="string" size="8" xpath="/scsxrq" />
		<Field id="jcdyj" desc="决策单意见" status="F"  edittype="text"  datatype="string" size="2000" xpath="/jcdyj" />
		<Field id="zzspr" desc="最终审批人" status="F"  edittype="text"  datatype="string" size="30" xpath="/zzspr" />
		<Field id="sfxhed" desc="是否循环制度" status="F"  edittype="text"  datatype="string" size="4" xpath="/sfxhed" />
		<Field id="sflsed" desc="是否临时额度" status="F"  edittype="text"  datatype="string" size="4" xpath="/sflsed" />
		<Field id="sxygh" desc="授信员工号" status="F"  edittype="text"  datatype="string" size="30" xpath="/sxygh" />
		<Field id="cjrq" desc="采集日期" status="F"  edittype="text"  datatype="string" size="8" xpath="/id/cjrq" />
		<Field id="operation" desc="操作" status="N" method="None" xpath=""
			   primary="true" type="" size="20" default="" tip="操作" require=""/>	
       </Fields>
	<Where>
    	<TextBox id="cjrq" desc="采集日期" datatype="date" index="5" require="true" errmsg="数据日期不能为空！" tip="时间为必输项" size="12"/>
    	<TextBox id="yxjgdm" desc="银行机构代码" datatype="string" index="3" size="30"/>
    </Where>
	<Operations>
		<Button id="btModOrAdd" name="btModOrAdd" desc="保存" operation="asysubmit"
			updateClass="resources.east.data.update.EastSxxxModOrAddUpdate"
			url="" txn="" />
		<Button id="btDel" name="btDel" desc="删除" operation="asysubmit"
			updateClass="resources.east.data.update.EastSxxxModOrAddUpdate"
			url="" />
		<Button id="btCancel" name="btCancel" desc="取消" operation="href" url="" />
		<Button id="btAdd" name="btAdd" desc="新增" operation="" url="#" show="" group="" txn="" icon="icon-add"/>
	</Operations>
</CommQry>